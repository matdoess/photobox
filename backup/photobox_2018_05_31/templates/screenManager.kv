            orientation:'vertical'

            Label:
                id:FotoTaskLabel
                text:""
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
                
            BoxLayout:
                id:FotoImageContainer
##                FotoImage:
##                    id:FotoImageID
##                    source:'pics/mail/2017-12-27_18-50-11_Test_mail.jpg'

##            Button:
