<SendEmailScreen>:
    BoxLayout:
        orientation:'vertical'
        size: root.size

        InnerBoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'
                height: self.minimum_height
                size_hint_y: None

                Label:
                    text: " email "
                    height: 40
                    #size_hint_y: None
                    size_hint_x: None
                    #pos_hint: {'x': 0, 'y': .9}
                    #size_hint: None, None
                    size: self.texture_size

                TextInput:
                    id: emailInput
                    text: ""
                    size_hint_y: None
                    height: 40
                    #pos_hint: {'x': 0, 'y': .9}
                    on_text: root.inputChanged(self.text)

                Button:
                    text: "X"
                    size_hint_x: None
                    on_press: root.clearEmailInput()

            Button:
                id: sendMailButton
                text: 'Senden'
                font_size: 20
                size_hint: [1, .2]
                background_color: (0, 2, 0, 1)
                on_press: root.sendEmail(emailInput.text)

            ScrollView:
                size: self.size
                scroll_type: ['bars', 'content']

                GridLayout:
                    spacing: 10
                    id: grid
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 1

        BackHomeButton:

<HelpScreen>:
    BoxLayout:
        orientation:'vertical'
        id: HelpScreenContainer
        
        InnerBoxLayout:
            orientation:'horizontal'

            BoxLayout:
                id:HelpImageContainer
                Image:
                    id:HelpImageId

            BoxLayout:
                orientation:'vertical'
                Label:
                    id:HelpScreenLabel
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    font_size:20
                HelpSendButton:
                    text: 'Hilferuf Senden'
                    height: 60
                    size_hint_y: None        
                    on_press:
                        root.sending_help()
                    on_release:
                        root.send_help()
                        
                    
        BackHomeButton:

<GalleryScreen>:
